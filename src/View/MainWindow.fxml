<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="442.0" prefWidth="712.0"
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.MainMenuController">

    <children>
        <BorderPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <!-- TOP: logo + title + subtitle -->
            <top>
                <VBox spacing="10.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets top="40.0"/>
                    </padding>
                    <children>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <ImageView fitHeight="54.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@iconss/bomb.png"/>
                                    </image>
                                </ImageView>
                                <Label text="MINE SWEEPER" textAlignment="CENTER">
                                    <font>
                                        <Font size="28.0"/>
                                    </font>
                                </Label>
                            </children>
                        </HBox>

                        <Label alignment="CENTER" contentDisplay="CENTER"
                               maxWidth="1.7976931348623157E308"
                               text="Classic game, modern experience"
                               textAlignment="CENTER">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
            </top>

            <!-- CENTER: three cards row -->
            <center>
                <HBox alignment="CENTER" spacing="40.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets top="40.0"/>
                    </padding>
                    <children>

                        <!-- Card 1: New Game -->
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@iconss/play.png"/>
                                    </image>
                                </ImageView>
                                <Label text="New Game">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </Label>
                                <Label text="Start a fresh minesweeper challenge">
                                    <font>
                                        <Font size="13.0"/>
                                    </font>
                                </Label>
                                <Button fx:id="newGameButton"
                                        mnemonicParsing="false"
                                        text="Enter"
                                        onAction="#handleNewGame"/>
                            </children>
                        </VBox>

                        <!-- Card 2: Game History -->
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@iconss/history.png"/>
                                    </image>
                                </ImageView>
                                <Label text="Game History">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </Label>
                                <Label text="View your past games and statistics">
                                    <font>
                                        <Font size="13.0"/>
                                    </font>
                                </Label>
                                <Button fx:id="gameHistoryButton"
                                        mnemonicParsing="false"
                                        text="Enter"
                                        onAction="#handleGameHistory"/>
                            </children>
                        </VBox>

                        <!-- Card 3: Question Bank -->
                        <VBox alignment="CENTER" spacing="10.0">
                            <children>
                                <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@iconss/question-and-answer.png"/>
                                    </image>
                                </ImageView>
                                <Label text="Question Bank">
                                    <font>
                                        <Font size="16.0"/>
                                    </font>
                                </Label>
                                <Label text="Test your knowledge">
                                    <font>
                                        <Font size="13.0"/>
                                    </font>
                                </Label>
                                <Button fx:id="questionBankButton"
                                        mnemonicParsing="false"
                                        text="Enter"
                                        onAction="#handleQuestionBank"/>
                            </children>
                        </VBox>

                    </children>
                </HBox>
            </center>

        </BorderPane>
    </children>
</AnchorPane>
