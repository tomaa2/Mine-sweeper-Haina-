<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.GameOverScreenController"
      fx:id="root"
      alignment="CENTER"
      spacing="20.0"
      style="-fx-background-color: linear-gradient(to bottom, #2b0000, #660000);"
      prefWidth="800.0" prefHeight="600.0">

    <padding>
        <Insets top="40.0" left="40.0" right="40.0" bottom="40.0"/>
    </padding>

    <children>
        <!-- Title -->
        <Label fx:id="titleLabel" text="GAME OVER ðŸ’£">
            <font>
                <Font size="40.0"/>
            </font>
            <style>
                -fx-text-fill: white;
                -fx-font-weight: bold;
                -fx-effect: dropshadow(gaussian, black, 10, 0.8, 0, 0);
            </style>
        </Label>

        <!-- Info Box -->
        <VBox spacing="8.0"
              style="-fx-background-color: rgba(0,0,0,0.45); -fx-background-radius: 18; -fx-padding: 15;">
            <children>
                <Label fx:id="playersLabel" text="">
                    <font><Font size="20.0"/></font>
                    <style>-fx-text-fill: #ffffff;</style>
                </Label>

                <Label fx:id="difficultyLabel" text="Difficulty: EASY">
                    <font><Font size="18.0"/></font>
                    <style>-fx-text-fill: #dddddd;</style>
                </Label>

                <Label fx:id="scoreLabel" text="Final Score: 0">
                    <font><Font size="20.0"/></font>
                    <style>-fx-text-fill: #ffeb3b;</style>
                </Label>

                <Label fx:id="livesLabel" text="Remaining Lives: 0">
                    <font><Font size="18.0"/></font>
                    <style>-fx-text-fill: #ff8a80;</style>
                </Label>
            </children>
        </VBox>

        <!-- Back button -->
        <Button fx:id="backToMenuButton"
                text="Back to Menu â¬…"
                prefWidth="260.0"
                style="-fx-background-color: #444444;
                       -fx-text-fill: white;
                       -fx-font-size: 16px;
                       -fx-background-radius: 25;
                       -fx-padding: 10 20;"/>
    </children>
</VBox>
