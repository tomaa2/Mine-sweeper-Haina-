<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
  Question Management Screen (Question Bank)
  - Game-style dark UI (navy + cyan accent)
  - Inline styles only (no external CSS)
  - Controller: Controller.QuestionController
  - Category filter KEPT
-->

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           stylesheets="@question.css"
           fx:controller="Controller.QuestionController"
           style="-fx-background-color: linear-gradient(to bottom right, #0b1020, #111827);
                  -fx-padding: 18;">

    <!-- Main dark card -->
    <VBox spacing="16"
          maxWidth="940"
          style="-fx-background-color: linear-gradient(to bottom, #1e2a4a, #18213d);
                 -fx-padding: 18 18 18 18;
                 -fx-background-radius: 20;
                 -fx-border-color: rgba(34,211,238,0.30);
                 -fx-border-radius: 20;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.45), 26, 0.28, 0, 10);">

        <!-- ===== Top Bar: Back + Title + Add ===== -->
        <HBox spacing="12" alignment="CENTER_LEFT">

            <Button fx:id="backToMenuButton"
                    text="â† Back to Menu"
                    onAction="#handleBackToMenu"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #22d3ee;
                           -fx-font-weight: 800;
                           -fx-font-size: 13px;
                           -fx-padding: 6 10;
                           -fx-cursor: hand;"/>

            <VBox spacing="2">
                <Label text="Question Bank"
                       style="-fx-font-size: 24px;
                              -fx-font-weight: 900;
                              -fx-text-fill: #22d3ee;"/>

                <Label text="Manage questions used in Two-Player mode"
                       style="-fx-font-size: 12px;
                              -fx-text-fill: rgba(255,255,255,0.75);"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="addQuestionButton"
                    text="+ Add Question"
                    onAction="#handleAddQuestion"
                    style="-fx-background-color: linear-gradient(to right, #22d3ee, #06b6d4);
                           -fx-text-fill: #0b1020;
                           -fx-font-weight: 900;
                           -fx-padding: 9 16;
                           -fx-background-radius: 12;
                           -fx-font-size: 13px;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(34,211,238,0.45), 14, 0.35, 0, 4);"/>
        </HBox>

        <!-- ===== Counters (cards) ===== -->
        <HBox spacing="10" alignment="CENTER_LEFT">

            <!-- Total -->
            <VBox spacing="4"
                  style="-fx-background-color: rgba(255,255,255,0.08);
                         -fx-background-radius: 16;
                         -fx-padding: 10 14;
                         -fx-border-color: rgba(34,211,238,0.18);
                         -fx-border-radius: 16;">
                <Label text="Total Questions"
                       style="-fx-font-size: 11px;
                              -fx-text-fill: rgba(255,255,255,0.70);
                              -fx-font-weight: 800;"/>
                <Label fx:id="totalQuestionsValueLabel"
                       text="0"
                       style="-fx-font-size: 20px;
                              -fx-font-weight: 900;
                              -fx-text-fill: white;"/>
            </VBox>

            <!-- Easy -->
            <VBox spacing="4"
                  style="-fx-background-color: rgba(34,197,94,0.16);
                         -fx-background-radius: 16;
                         -fx-padding: 10 14;
                         -fx-border-color: rgba(34,197,94,0.26);
                         -fx-border-radius: 16;">
                <Label text="Easy"
                       style="-fx-font-size: 11px;
                              -fx-text-fill: rgba(255,255,255,0.70);
                              -fx-font-weight: 800;"/>
                <Label fx:id="easyQuestionsValueLabel"
                       text="0"
                       style="-fx-font-size: 18px;
                              -fx-font-weight: 900;
                              -fx-text-fill: #bbf7d0;"/>
            </VBox>

            <!-- Medium -->
            <VBox spacing="4"
                  style="-fx-background-color: rgba(59,130,246,0.16);
                         -fx-background-radius: 16;
                         -fx-padding: 10 14;
                         -fx-border-color: rgba(59,130,246,0.26);
                         -fx-border-radius: 16;">
                <Label text="Medium"
                       style="-fx-font-size: 11px;
                              -fx-text-fill: rgba(255,255,255,0.70);
                              -fx-font-weight: 800;"/>
                <Label fx:id="mediumQuestionsValueLabel"
                       text="0"
                       style="-fx-font-size: 18px;
                              -fx-font-weight: 900;
                              -fx-text-fill: #bfdbfe;"/>
            </VBox>

            <!-- Hard -->
            <VBox spacing="4"
                  style="-fx-background-color: rgba(234,88,12,0.16);
                         -fx-background-radius: 16;
                         -fx-padding: 10 14;
                         -fx-border-color: rgba(234,88,12,0.26);
                         -fx-border-radius: 16;">
                <Label text="Hard"
                       style="-fx-font-size: 11px;
                              -fx-text-fill: rgba(255,255,255,0.70);
                              -fx-font-weight: 800;"/>
                <Label fx:id="hardQuestionsValueLabel"
                       text="0"
                       style="-fx-font-size: 18px;
                              -fx-font-weight: 900;
                              -fx-text-fill: #fed7aa;"/>
            </VBox>

            <!-- Expert -->
            <VBox spacing="4"
                  style="-fx-background-color: rgba(124,58,237,0.18);
                         -fx-background-radius: 16;
                         -fx-padding: 10 14;
                         -fx-border-color: rgba(124,58,237,0.28);
                         -fx-border-radius: 16;">
                <Label text="Expert"
                       style="-fx-font-size: 11px;
                              -fx-text-fill: rgba(255,255,255,0.70);
                              -fx-font-weight: 800;"/>
                <Label fx:id="expertQuestionsValueLabel"
                       text="0"
                       style="-fx-font-size: 18px;
                              -fx-font-weight: 900;
                              -fx-text-fill: #ddd6fe;"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- ===== Filters ===== -->
        <VBox spacing="6">
            <Label text="Filters"
                   style="-fx-font-size: 13px;
                          -fx-font-weight: 900;
                          -fx-text-fill: rgba(255,255,255,0.85);"/>

            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color: rgba(255,255,255,0.07);
                         -fx-background-radius: 16;
                         -fx-padding: 10 10;
                         -fx-border-color: rgba(34,211,238,0.16);
                         -fx-border-radius: 16;">

                <Label text="ðŸ”Ž"
                       style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.80);"/>

                <TextField fx:id="searchField"
                           promptText="Search by question text..."
                           HBox.hgrow="ALWAYS"
                           style="-fx-background-color: rgba(255,255,255,0.10);
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: rgba(255,255,255,0.55);
                                  -fx-background-radius: 12;
                                  -fx-border-color: rgba(255,255,255,0.14);
                                  -fx-border-radius: 12;
                                  -fx-padding: 7 10;
                                  -fx-font-size: 12px;"/>

               <ComboBox fx:id="categoryFilterCombo"
          promptText="All Categories"
          prefWidth="170"
          style="
              -fx-background-color: #1e293b;
              -fx-background-radius: 14;
              -fx-border-color: rgba(34,211,238,0.4);
              -fx-border-radius: 14;
              -fx-text-fill: white;
              -fx-font-size: 12px;
              -fx-padding: 6 10;
          "/>

       <ComboBox fx:id="difficultyFilterCombo"
          style="
              -fx-background-color: #1e293b;
              -fx-border-color: rgba(34,211,238,0.4);
              -fx-background-radius: 14;
              -fx-border-radius: 14;
              -fx-font-size: 12px;
          "/>


                <Button text="Clear"
                        onAction="#handleClearFilters"
                        style="-fx-background-color: rgba(255,255,255,0.10);
                               -fx-text-fill: white;
                               -fx-font-weight: 900;
                               -fx-padding: 8 14;
                               -fx-background-radius: 12;
                               -fx-border-color: rgba(255,255,255,0.18);
                               -fx-border-radius: 12;
                               -fx-cursor: hand;"/>
            </HBox>
        </VBox>

        <!-- ===== Questions Table (panel) ===== -->
        <VBox spacing="8" VBox.vgrow="ALWAYS"
              style="-fx-background-color: rgba(255,255,255,0.07);
                     -fx-background-radius: 18;
                     -fx-padding: 10;
                     -fx-border-color: rgba(34,211,238,0.14);
                     -fx-border-radius: 18;">

            <HBox alignment="CENTER_LEFT">
                <Label text="Questions"
                       style="-fx-text-fill: rgba(255,255,255,0.90);
                              -fx-font-size: 13px;
                              -fx-font-weight: 900;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Use Actions to edit or delete"
                       style="-fx-text-fill: rgba(255,255,255,0.60);
                              -fx-font-size: 11px;"/>
            </HBox>

            <TableView fx:id="questionsTable"
           prefHeight="380"
           VBox.vgrow="ALWAYS"
           style="
               -fx-background-color: transparent;
               -fx-control-inner-background: #1c2541;
               -fx-control-inner-background-alt: #1f2a44;

               -fx-table-cell-border-color: rgba(255,255,255,0.08);

               -fx-selection-bar: rgba(34,211,238,0.28);
               -fx-selection-bar-non-focused: rgba(34,211,238,0.18);

               -fx-text-background-color: white;

               -fx-border-color: rgba(34,211,238,0.35);
               -fx-border-radius: 14;
               -fx-background-radius: 14;
           ">

                <columns>
                    <TableColumn fx:id="difficultyColumn"
                                 text="Difficulty" prefWidth="120"/>

                    <TableColumn fx:id="questionTextColumn"
                                 text="Question" prefWidth="450"/>

                    <TableColumn fx:id="correctAnswerColumn"
                                 text="Correct Answer" prefWidth="190"/>

                    <TableColumn fx:id="actionsColumn"
                                 text="Actions" prefWidth="130"/>
                </columns>
            </TableView>
        </VBox>

    </VBox>

</StackPane>
